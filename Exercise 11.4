def expo(base, exponent):
    expo.calls += 1
    if exponent == 0:
        return 1
    if exponent % 2 == 1:
        return base * expo(base, exponent - 1)
    return (expo(base, exponent / 2))**2
expo.calls = 0
def main():
    """Tests with powers of 2."""
    for exponent in range (5):
        print(exponent, expo(2, exponent))
expo.calls == 4
